<h1 id="more-command-information">More command information</h1>

<figure class="highlight"><pre><code class="language-bash" data-lang="bash"><span class="c"># Shell</span>
mongo <span class="nt">--help</span>
mongo man

<span class="c"># Server</span>
mongod <span class="nt">--help</span>
mongod man

<span class="c"># Data Dump Utility</span>
mongodump <span class="nt">--help</span>
mongodump man

<span class="c"># Export Utility</span>
mongoexport <span class="nt">--help</span>
man mongoexport

<span class="c"># GridFS Utility</span>
mongofiles <span class="nt">--help</span>
man mongofiles

<span class="c"># Import Utility</span>
mongoimport <span class="nt">--help</span>
mongoimport man

<span class="c"># Traffic capture and replay tool</span>
mongoreplay <span class="nt">--help</span>
man mongoreplay

<span class="c"># Data restoration tool</span>
mongorestore <span class="nt">--help</span>
mongorestore man

<span class="c"># Cluster Lookup Router</span>
mongos <span class="nt">--help</span>
man monks

<span class="c"># Statistics utility</span>
mongostat <span class="nt">--help</span>
mongostat man

<span class="c"># Activity Monitor</span>
mongotop <span class="nt">--help</span>
mongotop man</code></pre></figure>

